<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bundle Identification -->
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundleDisplayName</key>
	<string>RetroVision Cabs Converter</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	
	<!-- Version Information -->
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	
	<!-- App Information -->
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>LSMinimumSystemVersion</key>
	<string>$(MACOSX_DEPLOYMENT_TARGET)</string>
	<key>NSHumanReadableCopyright</key>
	<string>Copyright Â© 2024-2026 BritX. All rights reserved.</string>
	
	<!-- Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.developer-tools</string>
	
	<!-- Required for App Store -->
	<key>CFBundleSupportedPlatforms</key>
	<array>
		<string>MacOSX</string>
	</array>
	
	<!-- Privacy Descriptions (Required for App Review) -->
	<key>NSDesktopFolderUsageDescription</key>
	<string>RetroVision Cabs Converter needs access to your Desktop to import and export arcade cabinet assets.</string>
	<key>NSDocumentsFolderUsageDescription</key>
	<string>RetroVision Cabs Converter needs access to your Documents folder to save converted cabinet files.</string>
	<key>NSDownloadsFolderUsageDescription</key>
	<string>RetroVision Cabs Converter needs access to Downloads to import arcade cabinet packs.</string>
	<key>NSRemovableVolumesUsageDescription</key>
	<string>RetroVision Cabs Converter needs access to external drives to read arcade cabinet source files and save converted outputs.</string>
	
	<!-- File Types -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeName</key>
			<string>USDZ Document</string>
			<key>CFBundleTypeExtensions</key>
			<array>
				<string>usdz</string>
			</array>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>LSHandlerRank</key>
			<string>Alternate</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>com.pixar.universal-scene-description-mobile</string>
			</array>
		</dict>
		<dict>
			<key>CFBundleTypeName</key>
			<string>GLB 3D Model</string>
			<key>CFBundleTypeExtensions</key>
			<array>
				<string>glb</string>
				<string>gltf</string>
			</array>
			<key>CFBundleTypeRole</key>
			<string>Viewer</string>
			<key>LSHandlerRank</key>
			<string>Alternate</string>
		</dict>
		<dict>
			<key>CFBundleTypeName</key>
			<string>ZIP Archive</string>
			<key>CFBundleTypeExtensions</key>
			<array>
				<string>zip</string>
			</array>
			<key>CFBundleTypeRole</key>
			<string>Viewer</string>
			<key>LSHandlerRank</key>
			<string>Alternate</string>
		</dict>
	</array>
	
	<!-- Exported Type Declarations -->
	<key>UTExportedTypeDeclarations</key>
	<array>
		<dict>
			<key>UTTypeIdentifier</key>
			<string>com.britx.retrovision.cabinet</string>
			<key>UTTypeDescription</key>
			<string>RetroVision Cabinet Pack</string>
			<key>UTTypeConformsTo</key>
			<array>
				<string>public.folder</string>
			</array>
			<key>UTTypeTagSpecification</key>
			<dict/>
		</dict>
	</array>
	
	<!-- Network/Privacy -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
	</dict>
	
	<!-- High Resolution Support -->
	<key>NSHighResolutionCapable</key>
	<true/>
	
	<!-- Supports Secure State Restoration -->
	<key>NSSupportsAutomaticTermination</key>
	<true/>
	<key>NSSupportsSuddenTermination</key>
	<false/>
	
	<!-- Principal Class -->
	<key>NSPrincipalClass</key>
	<string>NSApplication</string>
</dict>
</plist>
